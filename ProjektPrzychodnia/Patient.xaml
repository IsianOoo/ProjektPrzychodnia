<Window x:Class="ProjektPrzychodnia.Patient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektPrzychodnia"
        mc:Ignorable="d"
        Title="Patient" Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True" Loaded="Window_Loaded">
    <Window.Resources>
        <local:masterDataSet x:Key="masterDataSet"/>
        <CollectionViewSource x:Key="pacjentViewSource" Source="{Binding Pacjent, Source={StaticResource masterDataSet}}"/>
    </Window.Resources>
    <Border 
            CornerRadius="20"
            Grid.RowSpan="2">
        <Border.Background>
            <LinearGradientBrush>
                <GradientStop Color="#7be9f6" Offset="0.0"/>
                <GradientStop Color="#f083da" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid DataContext="{StaticResource pacjentViewSource}">
            <DataGrid HorizontalAlignment="Left" Height="205" Margin="10,10,0,0" VerticalAlignment="Top" Width="780" ItemsSource="{Binding}" SelectionChanged="DataGrid_SelectionChanged"/>




        </Grid>



    </Border>

</Window>
